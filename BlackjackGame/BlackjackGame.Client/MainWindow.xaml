
<Window x:Class="BlackjackGame.Client.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:BlackjackGame.Client"
        xmlns:viewModels="clr-namespace:BlackjackGame.Client.ViewModels"
        mc:Ignorable="d"
        Title="Blackjack Game" Height="650" Width="900"
        MinHeight="500" MinWidth="800">

    <Window.Resources>
        <viewModels:BlackjackViewModel x:Key="ViewModel" />
    </Window.Resources>

    <Grid DataContext="{StaticResource ViewModel}">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>

        <!--Game Mode Selection -->
        <Border Grid.Row="0" Background="#1E1E1E" Padding="10">
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                <Button Content="Single Player" 
                        Command="{Binding StartSinglePlayerGameCommand}"
                        Width="120" Margin="5"
                        IsEnabled="{Binding CanJoinGame}"/>
                <StackPanel Orientation="Horizontal" Margin="20,0,0,0">
                    <TextBox Text="{Binding PlayerName}" Width="120" Margin="0,0,5,0"/>
                    <Button Content="Connect to Server" 
                            Command="{Binding JoinGameCommand}" 
                            Width="120" Margin="5"
                            IsEnabled="{Binding CanJoinGame}"/>
                </StackPanel>
            </StackPanel>
        </Border>

        <!-- Game Table -->
        <Grid Grid.Row="1" Background="#0A6E0A">
            <Grid.RowDefinitions>
                <RowDefinition Height="*" />
                <RowDefinition Height="*" />
                <RowDefinition Height="*" />
            </Grid.RowDefinitions>

            <!-- Dealer Area -->
            <StackPanel Grid.Row="0" Orientation="Vertical" HorizontalAlignment="Center" VerticalAlignment="Center">
                <TextBlock Text="Dealer" FontSize="20" Foreground="White" HorizontalAlignment="Center" Margin="0,0,0,10"/>
                <ItemsControl ItemsSource="{Binding DealerCards}" HorizontalAlignment="Center">
                    <ItemsControl.ItemsPanel>
                        <ItemsPanelTemplate>
                            <WrapPanel Orientation="Horizontal" />
                        </ItemsPanelTemplate>
                    </ItemsControl.ItemsPanel>
                    <ItemsControl.ItemTemplate>
                        <DataTemplate>
                            <Border Width="80" Height="120" Background="White" Margin="5" BorderBrush="Black" BorderThickness="1" CornerRadius="5">
                                <TextBlock Text="{Binding DisplayText}" HorizontalAlignment="Center" VerticalAlignment="Center"
                                           TextWrapping="Wrap" TextAlignment="Center"/>
                            </Border>
                        </DataTemplate>
                    </ItemsControl.ItemTemplate>
                </ItemsControl>
            </StackPanel>

            <!-- Second Player Area (Only visible in two-player mode) -->
            <StackPanel Grid.Row="1" Orientation="Vertical" HorizontalAlignment="Center" VerticalAlignment="Center" 
                        Visibility="{Binding IsTwoPlayerMode, Converter={StaticResource BooleanToVisibilityConverter}}">
                <TextBlock Text="Player 2" FontSize="20" Foreground="White" HorizontalAlignment="Center" Margin="0,0,0,10"/>
                <ItemsControl ItemsSource="{Binding Player2Cards}" HorizontalAlignment="Center">
                    <ItemsControl.ItemsPanel>
                        <ItemsPanelTemplate>
                            <WrapPanel Orientation="Horizontal" />
                        </ItemsPanelTemplate>
                    </ItemsControl.ItemsPanel>
                    <ItemsControl.ItemTemplate>
                        <DataTemplate>
                            <Border Width="80" Height="120" Background="White" Margin="5" BorderBrush="Black" BorderThickness="1" CornerRadius="5">
                                <TextBlock Text="{Binding DisplayText}" HorizontalAlignment="Center" VerticalAlignment="Center"
                                           TextWrapping="Wrap" TextAlignment="Center"/>
                            </Border>
                        </DataTemplate>
                    </ItemsControl.ItemTemplate>
                </ItemsControl>
            </StackPanel>

            <!-- Player Area -->
            <StackPanel Grid.Row="2" Orientation="Vertical" HorizontalAlignment="Center" VerticalAlignment="Center">
                <TextBlock Text="Player 1" FontSize="20" Foreground="White" HorizontalAlignment="Center" Margin="0,0,0,10"/>
                <ItemsControl ItemsSource="{Binding PlayerCards}" HorizontalAlignment="Center">
                    <ItemsControl.ItemsPanel>
                        <ItemsPanelTemplate>
                            <WrapPanel Orientation="Horizontal" />
                        </ItemsPanelTemplate>
                    </ItemsControl.ItemsPanel>
                    <ItemsControl.ItemTemplate>
                        <DataTemplate>
                            <Border Width="80" Height="120" Background="White" Margin="5" BorderBrush="Black" BorderThickness="1" CornerRadius="5">
                                <TextBlock Text="{Binding DisplayText}" HorizontalAlignment="Center" VerticalAlignment="Center"
                                           TextWrapping="Wrap" TextAlignment="Center"/>
                            </Border>
                        </DataTemplate>
                    </ItemsControl.ItemTemplate>
                </ItemsControl>
            </StackPanel>
        </Grid>

        <!-- Controls Area -->
        <Border Grid.Row="2" Background="#333333" Padding="15">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <!-- Status -->
                <StackPanel Grid.Column="0" Orientation="Vertical" VerticalAlignment="Center">
                    <TextBlock Text="{Binding StatusMessage}" FontSize="16" Foreground="White"/>
                </StackPanel>

                <!-- Action Buttons -->
                <StackPanel Grid.Column="1" Orientation="Horizontal" HorizontalAlignment="Right">
                    <StackPanel Orientation="Horizontal" Visibility="{Binding IsConnected, Converter={StaticResource BooleanToVisibilityConverter}}">
                        <!-- Betting Controls -->
                        <StackPanel Orientation="Horizontal" Margin="0,0,10,0">
                            <TextBlock Text="Bet:" VerticalAlignment="Center" Foreground="White" Margin="0,0,5,0"/>
                            <TextBox Text="{Binding BetAmount}" Width="50" VerticalAlignment="Center"/>
                            <Button Content="Place Bet" Command="{Binding PlaceBetCommand}" Width="80" Margin="10,0,0,0"/>
                        </StackPanel>

                        <!-- Game Controls -->
                        <Button Content="Hit" Command="{Binding HitCommand}" Width="80" Margin="5,0"/>
                        <Button Content="Stand" Command="{Binding StandCommand}" Width="80" Margin="5,0"/>
                        <Button Content="New Round" Command="{Binding StartNewRoundCommand}" Width="80" Margin="5,0"/>
                    </StackPanel>
                </StackPanel>
            </Grid>
        </Border>
    </Grid>
</Window>
